{
  "extends": "@projectsophon/tsconfig",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": ".",
    "hideBreadcrumbs": true,
    "readme": "none",
    "disableSources": true,
    "cleanOutputDir": false,
    "githubPages": false
  }
}
