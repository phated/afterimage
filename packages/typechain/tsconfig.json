{
  "extends": "@projectsophon/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "preserve"
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs",
    "hideBreadcrumbs": true,
    "readme": "none",
    "disableSources": true,
    "disableOutputCheck": true,
    "excludeExternals": true,
    "listInvalidSymbolLinks": true
  }
}
